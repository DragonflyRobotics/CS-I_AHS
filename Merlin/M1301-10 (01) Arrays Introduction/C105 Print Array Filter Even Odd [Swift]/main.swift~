// Add your code below:
func printEvenAfterOddIntegers(integers: [Int]) -> Int {
    var num = 0
    for n in 0 ... integers.count-1 {
        if (integers[n]%2) != 0 {
            if (integers[n+1]%2) == 0 {
                print(integers[n+1])
                num += 1
            }
        }
    }
    return num
}





// Add your code above

