// DO NOT ALTER THE TEXT BETWEEN THESE LINES =========={M{E{R{L{I{N{1}N}I}L}R}E}M}=====================================
let integers : [Int] = [9, 111, 15, 12]
print(integers)
let count = printEvenAfterOddIntegers(integers:integers)
print(count)
